    "ts-node": "^5.0.1",
    "typescript": "^3.0.1",
    "winston-graylog2": "^1.0.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**",
      "dist/**",
      "coverage/**",
      "demo",
      "src/types",
      "**/*.js",
      "src/lib/modules/analytics.ts",
      "src/lib/modules/storage.ts"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  }
