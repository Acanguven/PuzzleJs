  "scripts": {
    "prepublish": "yarn build",
    "build": "node_modules/.bin/tsc && gulp build && node_modules/.bin/webpack --config ./src/lib/webpack.config.js && gulp prepareLib",
    "test": "nyc --check-coverage --lines=85 cross-env NODE_ENV=production mocha -r ts-node/register  --recursive 'test/**/*.spec.ts'",
    "test:lib": "nyc -n 'src/lib/**/*.ts' --check-coverage --lines=85  cross-env NODE_ENV=production mocha -r ts-node/register  --recursive 'test/lib/**/*.spec.ts'",
    "test:watch": "cross-env NODE_ENV=production mocha --watch --require ts-node/register --watch-extensions ts,tsx --recursive 'test/**/*.spec.ts'",
    "test:watch:lib": "cross-env NODE_ENV=production mocha --watch --require ts-node/register --watch-extensions ts,tsx --recursive 'test/lib/**/*.spec.ts'",
    "publish:beta": "yarn publish --tag=beta",
    "cov": "echo cov",
    "lint": "echo lint"
  },
  "dependencies": {
    "async": "^2.6.0",
    "cheerio": "^1.0.0-rc.2",
    "clean-css": "^4.1.11",
